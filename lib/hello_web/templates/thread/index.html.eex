<h1>Listing Threads</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for thread <- @threads do %>
    <tr>
      <td><%= thread.title %></td>

      <td>
        <span><%= link "Show", to: Routes.board_thread_path(@conn, :show, @board_id, thread) %></span>
        <span><%= link "Edit", to: Routes.board_thread_path(@conn, :edit, @board_id, thread) %></span>
        <span><%= link "Delete", to: Routes.board_thread_path(@conn, :delete, @board_id, thread), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Thread", to: Routes.board_thread_path(@conn, :new, @board_id) %></span>
