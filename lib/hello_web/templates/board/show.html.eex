<h1>Show Board</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @board.name %>
  </li>

  <%= for thread <- @board.threads do %>
    <li><%= link thread.title, to: Routes.board_thread_path(@conn, :show, @board.id, thread.id) %></li>
  <% end %>

</ul>

<span><%= link "Edit", to: Routes.board_path(@conn, :edit, @board) %></span>
<span><%= link "Back", to: Routes.board_path(@conn, :index) %></span>
