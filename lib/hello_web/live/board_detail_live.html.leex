<h1>Show Board</h1>

<ul>

    <li>
        <strong>Name:</strong>
        <%= @board.name %>
    </li>

    <%= for thread <- @board.threads do %>
    <li><%= live_patch thread.title, to: Routes.live_path(@socket, HelloWeb.ThreadDetailLive, @board.id, thread.id) %></li>
    <% end %>

</ul>

<%= f = form_for @changeset, "#", [phx_submit: :createThread] %>
<%= label f, :title %>
<%= text_input f, :title %>
<%= error_tag f, :title %>

<%= label f, :content %>
<%= textarea f, :content %>
<%= error_tag f, :content %>


<%= submit "Create Thread" %>
</form>

<span><%= link "Edit", to: Routes.board_path(@socket, :edit, @board) %></span>
<span><%= live_patch "Back", to: Routes.live_path(@socket, HelloWeb.BoardsLive) %></span>
